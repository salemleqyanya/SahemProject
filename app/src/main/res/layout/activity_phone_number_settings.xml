<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="4dp"

    android:padding="7dp"
    tools:context=".Profile.Settings.PhoneNumberSettingsActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Phone Number Setting"
        android:textSize="28sp"
        android:textColor="#000"
        android:layout_gravity="left"/>

    <TextView
        android:id="@+id/currentPhone_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="currentPhone "

        android:layout_margin="3dp"
        android:layout_gravity="left"/>

    <EditText
        android:id="@+id/userPhoneNumber_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="enter your phone No."
        android:layout_margin="5dp"/>

    <EditText
        android:id="@+id/phonePassword_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:inputType="textPassword"
        android:layout_margin="5dp"/>




        <Button

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="saveChanges"
            android:text="save changes"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:padding="5dp"
            android:layout_marginTop="8dp"
            android:background="@android:color/transparent"
            android:textStyle="bold"
            android:textColor="#03A9F4"/>


</LinearLayout>