<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#23FBFBFB"
    android:backgroundTint="@color/color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.45"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">
    <EditText
        android:id="@+id/donation_sourceName_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimaryDark"
        android:hint="source Name"
        android:layout_margin="5dp"/>


    <EditText
        android:id="@+id/donation_url_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="URL"
        android:backgroundTint="@color/colorPrimaryDark"
        android:layout_margin="5dp"/>


    <EditText
        android:id="@+id/donation_description_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Description source"
        android:backgroundTint="@color/colorPrimaryDark"
        android:inputType="textMultiLine"

        android:layout_margin="5dp"/>
        <LinearLayout
            android:id="@+id/linearLayout8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.45"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.45">


            <Button
                android:id="@+id/cancelIB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="center"
                android:background="@color/colorBackground"
                android:backgroundTint="@color/colorBackground"
                android:text="cancel"
                android:textColor="#0091EA" />

            <Button
                android:id="@+id/saveChangesIB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:background="@color/colorBackground"
                android:backgroundTint="@color/colorBackground"
                android:text="Save "
                android:textColor="#DC0F0F" />

        </LinearLayout>

    </LinearLayout>






</androidx.constraintlayout.widget.ConstraintLayout>